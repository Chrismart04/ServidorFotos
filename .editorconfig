root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false


[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_size = 2


[*.json]
indent_size = 2


[*.{yml,yaml}]
indent_size = 2


[{package.json,package-lock.json,npm-shrinkwrap.json}]
indent_size = 2


[*.{css,scss,sass}]
indent_size = 2


[*.html]
indent_size = 2


[.{babelrc,eslintrc,prettierrc}]
indent_size = 2


[*.sh]
end_of_line = lf



[{.gitconfig,.gitmodules,.gitattributes}]
indent_size = 4


[{Dockerfile,docker-compose.yml}]
indent_size = 2